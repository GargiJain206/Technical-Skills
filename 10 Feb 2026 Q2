// WAP to find sum of lower diagonal elements in matrix.

import java.util.Scanner;
public class Main{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter order of matrix : ");
		int n = sc.nextInt();
		int[][] a = new int[n][n];
		int sum = 0;
		
		System.out.print("Enter matrix elements : ");
		for(int i=0;i<n;i++){
		    for(int j=0;j<n;j++){
		        a[i][j]= sc.nextInt();
		        if(j<i){
		            sum += a[i][j];
		        }
		    }
		}
		System.out.print("Sum of lower diagonal elements : "+sum);
	}
}
